# Database
DATABASE_URL="file:./dev.db"

# NextAuth.js Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (for social login)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Set authorized redirect URI to: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (optional)
# Create credentials at: https://github.com/settings/developers
# Set authorization callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_ID="your-github-client-id"
GITHUB_SECRET="your-github-client-secret"

# Unsplash API (optional - for wine images)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# Liv-ex LWIN API (optional - for wine data)
LWIN_CLIENT_KEY="your-lwin-client-key"
LWIN_CLIENT_SECRET="your-lwin-client-secret"
